rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated() && request.auth.token.admin == true;
    }

    // Orders collection rules
    match /orders/{orderId} {
      allow read: if isAuthenticated() && (
        resource.data.userId == request.auth.uid || isAdmin()
      );
      
      allow create: if isAuthenticated();
      
      allow update: if isAuthenticated() && (
        resource.data.userId == request.auth.uid || isAdmin()
      );
      
      allow delete: if isAdmin();
    }

    // Menu items collection rules
    match /menuItems/{itemId} {
      allow read: if true;  // Everyone can read menu items
      allow write: if isAdmin();
    }

    // Categories collection rules
    match /categories/{categoryId} {
      allow read: if true;  // Everyone can read categories
      allow write: if isAdmin();
    }

    // Users collection rules
    match /users/{userId} {
      allow read: if isAuthenticated() && (
        userId == request.auth.uid || isAdmin()
      );
      // Allow unauthenticated read for email validation (forgot password)
      allow read: if !isAuthenticated();
      allow write: if isAuthenticated() && userId == request.auth.uid;
    }

    // Bookings collection rules
    match /bookings/{bookingId} {
      allow read: if isAuthenticated() && (
        resource.data.userId == request.auth.uid || isAdmin()
      );
      
      allow create: if isAuthenticated();
      
      allow update: if isAuthenticated() && (
        resource.data.userId == request.auth.uid || isAdmin()
      );
      
      allow delete: if isAdmin();
    }

    // Store status collection rules
    match /storeStatus/{document=**} {
      allow read: if true; // Everyone can read store status
      allow write: if isAdmin(); // Only admins can update store status
    }
  }
}